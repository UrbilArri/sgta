<h1>ABISUAK</h1>
<div> 
	<table border = "1" style="position: relative; top: 7%; width: 100%; overflow-y: scroll; border-style: solid; border-right-width: 10px; border-right-color: rgba(0, 0, 0, 0.3); ">
	<tr><td style="width: 35%;">Data</td><td style="width: 25%;">Mota</td><td style="width: 20%;">Errepidea</td><td style="width: 20%;">Abisu osoa ikusi</td></tr>
	</table>
</div>
<div style="max-height: 500px; overflow-y: scroll;">
	<% if @abisuak.length > 0%>
		<table border = "solid" style=" width: 100%; border-color: black;">
			<% @abisuak.each do |abisua| %>
				<tr><td style="width: 35%;"><%= abisua["data"] %></td><td style="width: 25%;"><%= abisua["mota"] %></td><td style="width: 20%;"><%= abisua["errepidea"] %></td><td style="width: 20%;"></td></tr>
			<% end %>
		</table>
	<% end %>
</div>
<div><input type="button" class="textBox" value="Abisua igo" onclick="javascript:window.location.href='/abisuaIgo'" style="position: absolute; bottom: 2%"></input></div>

