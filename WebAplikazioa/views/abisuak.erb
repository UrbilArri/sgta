<h1>ABISUAK</h1>
<div style=" overflow-y: scroll; border-bottom: none; border-bottom-width: 0; "> 
	<table border = "1" style="position: relative; top: 7%; width: 100%; overflow-y: scroll; border-style: solid; border-bottom: none; border-bottom-width: 0; ">
	<tr><td style="width: 35%;">Data</td><td style="width: 25%;">Mota</td><td style="width: 20%;">Errepidea</td><td style="width: 20%;">Abisu osoa ikusi</td></tr>
	</table>
</div>
<div style="max-height: 500px; overflow-y: scroll;border-top: none; border-top-width: 0;">
	<% if @abisuak.length > 0%>
		<table border = "solid" style=" width: 100%; border-color: black; border-top: none; border-top-width: 0; ">
			<% @abisuak.each do |abisua| %>
				<tr><td style="width: 35%;"><%= abisua["data"] %></td><td style="width: 25%;"><%= abisua["mota"] %></td><td style="width: 20%;"><%= abisua["errepidea"] %></td><td style="width: 20%;"><a href='/abisua/<%= abisua["id"] %>'> abisu osoa ikusi</a></td></tr>
			<% end %>
		</table>
	<% end %>
</div>
<div><input type="button" class="textBox" value="Abisua igo" onclick="javascript:window.location.href='/abisuaIgo'" style="position: absolute; bottom: 2%; left: 46%;"></input></div>

